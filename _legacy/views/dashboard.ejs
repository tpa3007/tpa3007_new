<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TPA3007 Dashboard</title>
    <style>
        body { font-family: 'Neue Haas Grotesk', sans-serif; background-color: #fdfdfd; padding: 20px; margin: 0; }
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; }
        .logout-btn { padding: 0.5rem 1rem; background-color: #d32f2f; color: white; border: none; border-radius: 4px; cursor: pointer; text-decoration: none; }
        .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 2rem; }
        .stat-card { background: white; border: 1px solid #e0e0e0; border-radius: 8px; padding: 1rem; text-align: center; }
        .stat-value { font-size: 2rem; font-weight: bold; color: #000; }
        .stat-label { font-size: 0.9rem; color: #666; }
        .orders-table { width: 100%; border-collapse: collapse; margin-top: 1rem; }
        .orders-table th, .orders-table td { border: 1px solid #e0e0e0; padding: 0.75rem; text-align: left; }
        .orders-table th { background-color: #f5f5f5; }
        .status-waiting { color: orange; }
        .status-paid { color: green; }
        .status-expired { color: gray; }
        .status-failed { color: red; }
    </style>
</head>
<body>
    <div class="header">
        <h1>TPA3007 Dashboard</h1>
        <a href="/logout" class="logout-btn">Logout</a> <!-- Пока просто ссылка, логика выхода не реализована -->
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-value"><%= stats.paid_count %></div>
            <div class="stat-label">Paid</div>
        </div>
        <div class="stat-card">
            <div class="stat-value"><%= stats.waiting_count %></div>
            <div class="stat-label">Waiting</div>
        </div>
        <div class="stat-card">
            <div class="stat-value"><%= stats.expired_count %></div>
            <div class="stat-label">Expired</div>
        </div>
        <div class="stat-card">
            <div class="stat-value"><%= stats.total_paid_usdt ? stats.total_paid_usdt.toFixed(2) : '0.00' %> USDT</div>
            <div class="stat-label">Total Paid</div>
        </div>
    </div>

    <h2>Recent Orders</h2>
    <table class="orders-table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Amount (USDT)</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Expires At</th>
                <th>Paid At</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
            <tr>
                <td><%= order.order_id %></td>
                <td><%= parseFloat(order.amount_usdt).toFixed(2) %></td>
                <td class="status-<%= order.status %>"><%= order.status.toUpperCase() %></td>
                <td><%= new Date(order.created_at).toLocaleString() %></td>
                <td><%= new Date(order.expires_at).toLocaleString() %></td>
                <td><%= order.paid_at ? new Date(order.paid_at).toLocaleString() : '-' %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Скрипт для логаута (удаления cookie) -->
    <script>
        document.querySelector('.logout-btn').addEventListener('click', function(e) {
            e.preventDefault();
            // Удаляем cookie brand_id
            document.cookie = "brand_id=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
            // Перенаправляем на страницу логина
            window.location.href = '/login';
        });
    </script>
</body>
</html>